<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/ProblemPhoto"
                    android:src="@color/green"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/ProofPhoto"
                    android:src="@color/green"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintName"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_Name"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintMobileNumber"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_MobileNumber"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintAddress"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_Address"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintVillage"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_Village"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintWard"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_Ward"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintTaluk"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_Taluk"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ComplaintBox"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/Complainter_Box"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/ResultView"
                    android:fontFamily="@font/roboto_black"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
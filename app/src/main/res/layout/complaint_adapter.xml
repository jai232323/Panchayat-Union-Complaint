<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/ProblemPhoto"
                    android:src="@color/green"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/ProofPhoto"
                    android:src="@color/green"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintName"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_Name"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintMobileNumber"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_MobileNumber"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintAddress"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_Address"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintVillage"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_Village"
                android:fontFamily="@font/roboto_black"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintWard"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_Ward"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintTaluk"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_Taluk"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ComplaintBox"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Complainter_Box"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/desc"
                app:startIconTint="@color/green"
                android:layout_height="100dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Description..."
                    android:inputType="textMultiLine"
                    android:id="@+id/Description"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ResultView"
                android:fontFamily="@font/roboto_black"
                android:textSize="16sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/SUBMIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="SUBMIT"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>